<odoo>
    <data>
        <!-- explicit list view definition -->

        <record id="view_project_usd" model="ir.ui.view">
            <field name="name">view_project_usd</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='user_id']" position="after">
                    <!-- Add new fields here -->
                    <field name="AED" invisible="1"/>
                    <field name="USD" invisible="1"/>
                    <field name="jan"/>
                    <field name="feb"/>
                    <field name="mar"/>
                    <field name="apr"/>
                    <field name="may"/>
                    <field name="jun"/>
                    <field name="jul"/>
                    <field name="aug"/>
                    <field name="sep"/>
                    <field name="oct"/>
                    <field name="nov"/>
                    <field name="dec"/>
                    <field name="dec"/>
                    <field name="total_AED"/>
                    <field name="total_USD"/>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="edit_project_form_view_inherit" model="ir.ui.view">
            <field name="name">edit_project_form_view_inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="AED" invisible="0"/>
                    <field name="jan"/>
                    <field name="feb"/>
                    <field name="mar"/>
                    <field name="apr"/>
                    <field name="may"/>
                    <field name="jun"/>
                    <field name="jul"/>
                    <field name="aug"/>
                    <field name="sep"/>
                    <field name="oct"/>
                    <field name="nov"/>
                    <field name="dec"/>
                    <field name="total_AED"/>
                </xpath>

                <xpath expr="//field[@name='date_start']" position="after">
                    <field name="USD" invisible="0"/>
                    <field name="USD_rate"/>
                    <field name="jan_usd"/>
                    <field name="feb_usd"/>
                    <field name="mar_usd"/>
                    <field name="apr_usd"/>
                    <field name="may_usd"/>
                    <field name="jun_usd"/>
                    <field name="jul_usd"/>
                    <field name="aug_usd"/>
                    <field name="sep_usd"/>
                    <field name="oct_usd"/>
                    <field name="nov_usd"/>
                    <field name="dec_usd"/>
                    <field name="total_USD"/>
                </xpath>

            </field>
        </record>


        <record id="projection_view_form" model="ir.ui.view">
            <field name="name">projection_view_form</field>
            <field name="model">project.projection</field>
            <field name="arch" type="xml">
                <form string="Project" class="o_form_project_project" js_class="project_form">
                    <header>
                        <button name="create_project" string="Create Project" type="object" class="oe_highlight"
                                context="{'default_access_mode': 'read', 'dialog_size': 'medium'}" data-hotkey="r"/>
                    </header>
                    <sheet string="Project">

                        <div class="oe_title">
                            <h1 class="d-flex flex-row">
                                <field name="name" options="{'line_breaks': False}" widget="text"
                                       class="o_text_overflow" placeholder="e.g. Office Party"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" widget="res_partner_many2one"/>
                                <field name="tag_ids" widget="many2many_tags"/>
                                <field name="AED" invisible="0"/>
                                <field name="jan"/>
                                <field name="feb"/>
                                <field name="mar"/>
                                <field name="apr"/>
                                <field name="may"/>
                                <field name="jun"/>
                                <field name="jul"/>
                                <field name="aug"/>
                                <field name="sep"/>
                                <field name="oct"/>
                                <field name="nov"/>
                                <field name="dec"/>
                                <field name="total_AED"/>
                            </group>
                            <group>
                                <field name="user_id" string="Project Manager" widget="many2one_avatar_user"

                                       options="{'no_quick_create': True}"/>
                                <field name="date_start" string="Planned Date"/>
                                <field name="USD" invisible="0"/>
                                <field name="USD_rate"/>
                                <field name="jan_usd"/>
                                <field name="feb_usd"/>
                                <field name="mar_usd"/>
                                <field name="apr_usd"/>
                                <field name="may_usd"/>
                                <field name="jun_usd"/>
                                <field name="jul_usd"/>
                                <field name="aug_usd"/>
                                <field name="sep_usd"/>
                                <field name="oct_usd"/>
                                <field name="nov_usd"/>
                                <field name="dec_usd"/>
                                <field name="total_USD"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'post_refresh':True}"
                               help="Follow this project to automatically track the events associated to tasks and issues of this project."
                               groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="projection_view_tree" model="ir.ui.view">
            <field name="name">projection_view_tree</field>
            <field name="model">project.projection</field>
            <field name="arch" type="xml">
                <tree string="projection_tree">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="date_start" string="Planned Date" widget="daterange" optional="hide"/>
                    <field name="AED" invisible="1"/>
                    <field name="USD" invisible="1"/>
                    <field name="jan"/>
                    <field name="feb"/>
                    <field name="mar"/>
                    <field name="apr"/>
                    <field name="may"/>
                    <field name="jun"/>
                    <field name="jul"/>
                    <field name="aug"/>
                    <field name="sep"/>
                    <field name="oct"/>
                    <field name="nov"/>
                    <field name="dec"/>
                    <field name="dec"/>
                    <field name="total_AED"/>
                    <field name="total_USD"/>
                </tree>
            </field>
        </record>

        <record id="projection_action" model="ir.actions.act_window">
            <field name="name">Projection</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.projection</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="projection_menu" name="Projection" parent="project.menu_main_pm" action="projection_action" sequence="1"/>


